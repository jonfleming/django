  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "console": "integratedTerminal",
      "django": true,
      "env":{"neouri":"bolt://jonfleming.net:7687", "neousername":"neo4j", "neopassword":"neo4j"}
    },
    {
      "name": "Debug Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test", "info.tests", ],
      "console": "integratedTerminal",
      "django": true,
    }
  ]
}
